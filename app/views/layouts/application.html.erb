<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'application' %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="header">
      <div class="bounded">
        <span id="branding">myapp</span>
        <% if logged_in? %>
          <%= link_to "My Account", my_account_path %>           
        <% end %>
      </div>
    </div>
    <% unless flash.empty? %>
      <div class="messages">
        <%- flash.each do |name, msg| -%>
          <%= content_tag :div, msg, :id => "flash_#{name}", :class => 'bounded' %>
        <%- end -%>    
      </div>
    <% end %>
    <div id="container">      
      <div class="bounded">
        <%- if show_title? -%>
          <h1><%=h yield(:title) %></h1>
        <%- end -%>
      
        <%= yield %>
      </div>
    </div>
  </body>
</html>
